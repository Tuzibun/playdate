<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Image</th>
      <th>Classroom</th>
      <th>Parent1</th>
      <th>Parent2</th>
      <th>Actions</th>
    </tr>
    <tr>
      <%= form_for Student.new do |f| %>
        
        <td>
          <%= f.text_field :first_name, :class => "form-control" %>
        </td>
        <td><input class="form-control last_name-input"></td>
        <td><input class="form-control gender-input"></td>
        <td><input class="form-control classroom-input"></td>
        <td><input class="form-control image-input"></td>
        <td><input class="form-control parent1-input"></td>
        <td><input class="form-control parent2-input"></td>
        <td><button class="btn btn-primary add-student"><%= link_to 'New Student', new_student_path %>Add</button></td>
        <% end %>
      </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.gender %></td>
        <td><%= student.image %></td>
        <td><%= student.classroom %></td>
        <td><%= student.parent1 %></td>
        <td><%= student.parent2 %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
