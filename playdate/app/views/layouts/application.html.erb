<!DOCTYPE html>
<html>
<head>
  <title>Playdate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Istok+Web:400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>

<body>
	<div class="logo">
		<%= image_tag(asset_path('playdate.tiff')) %>
	</div>

	<div class="nav_bar">
	    <ul class="menu">
	      <li><%= link_to "Students", students_path, :class => "list" %></li>
	      <li><%= link_to "Classrooms", classrooms_path, :class => "list" %></li>
	      <li><%= link_to "Add A Student", new_student_path, :class => "list" %></li>
	          <% if user_signed_in? %>
	      <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "list" %></li>
	          <% else %>
	      <li><%= link_to 'Login', new_user_session_path, :class => "list" %></li>

	      <% end %>
	    </ul>
	</div>

<%= render 'layouts/nav' %>
 
<% flash.each do |key, value| %>
    <div class="text-center <%= flash_class(key) %>">
      <%= value %>
    </div>
<% end %>
 
<div class="content">

	<%= yield %>

</div>

<script type="text/template" class="student-list-template">
	<td><span class="first_name"></span></td>
	<td><span class="last_name"></span></td>
	<td><span class="gender"></span></td>
	<td><span class="image"></span></td>
	<td><span class="classroom"></span></td>
	<td><span class="parent1"></span></td>
	<td><span class="parent2"></span></td>
	<td><button class="btn btn-warning edit-student">Edit</button>
	<button class="btn btn-danger delete-student">Delete</button>
	<button class="btn btn-success update-student" style="display:none">Update</button> 
	<button class="btn btn-danger cancel" style="display:none">Cancel</button>
	</td>
</script>

</body>

</html>
